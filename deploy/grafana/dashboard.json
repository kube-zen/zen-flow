{
  "dashboard": {
    "title": "zen-flow Controller Dashboard",
    "tags": ["zen-flow", "kubernetes", "job-orchestration"],
    "timezone": "browser",
    "schemaVersion": 27,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "JobFlows by Phase",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "sum(zen_flow_jobflows_total{phase=\"Running\"})",
            "legendFormat": "Running",
            "refId": "A"
          },
          {
            "expr": "sum(zen_flow_jobflows_total{phase=\"Succeeded\"})",
            "legendFormat": "Succeeded",
            "refId": "B"
          },
          {
            "expr": "sum(zen_flow_jobflows_total{phase=\"Failed\"})",
            "legendFormat": "Failed",
            "refId": "C"
          },
          {
            "expr": "sum(zen_flow_jobflows_total{phase=\"Pending\"})",
            "legendFormat": "Pending",
            "refId": "D"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "short"
          }
        }
      },
      {
        "id": 2,
        "title": "Total Steps Executed",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 0},
        "targets": [
          {
            "expr": "sum(increase(zen_flow_steps_total{phase=\"Succeeded\"}[5m]))",
            "legendFormat": "Succeeded (5m)",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "green"},
                {"value": 10, "color": "yellow"},
                {"value": 100, "color": "red"}
              ]
            },
            "unit": "short"
          }
        }
      },
      {
        "id": 3,
        "title": "Step Execution Rate",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "sum(rate(zen_flow_steps_total[5m]))",
            "legendFormat": "Steps/sec",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "unit": "ops"
          }
        }
      },
      {
        "id": 4,
        "title": "Reconciliation Rate",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 0},
        "targets": [
          {
            "expr": "sum(rate(zen_flow_reconciliation_duration_seconds_count[5m]))",
            "legendFormat": "Reconciliations/sec",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "green"},
                {"value": 0.1, "color": "yellow"},
                {"value": 1, "color": "red"}
              ]
            },
            "unit": "ops"
          }
        }
      },
      {
        "id": 5,
        "title": "Step Execution Over Time",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4},
        "targets": [
          {
            "expr": "sum(rate(zen_flow_steps_total{phase=\"Succeeded\"}[5m])) by (flow)",
            "legendFormat": "{{flow}} - Succeeded",
            "refId": "A"
          },
          {
            "expr": "sum(rate(zen_flow_steps_total{phase=\"Failed\"}[5m])) by (flow)",
            "legendFormat": "{{flow}} - Failed",
            "refId": "B"
          }
        ],
        "yaxes": [
          {
            "format": "ops",
            "label": "Steps/sec"
          },
          {
            "format": "short"
          }
        ]
      },
      {
        "id": 6,
        "title": "Step Duration (P95)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(zen_flow_step_duration_seconds_bucket[5m])) by (le, flow))",
            "legendFormat": "P95 - {{flow}}",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.50, sum(rate(zen_flow_step_duration_seconds_bucket[5m])) by (le, flow))",
            "legendFormat": "P50 - {{flow}}",
            "refId": "B"
          }
        ],
        "yaxes": [
          {
            "format": "s",
            "label": "Duration"
          },
          {
            "format": "short"
          }
        ]
      },
      {
        "id": 7,
        "title": "Reconciliation Duration",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(zen_flow_reconciliation_duration_seconds_bucket[5m])) by (le))",
            "legendFormat": "P95",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.50, sum(rate(zen_flow_reconciliation_duration_seconds_bucket[5m])) by (le))",
            "legendFormat": "P50",
            "refId": "B"
          }
        ],
        "yaxes": [
          {
            "format": "s",
            "label": "Duration"
          },
          {
            "format": "short"
          }
        ]
      },
      {
        "id": 8,
        "title": "Steps by Phase",
        "type": "piechart",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12},
        "targets": [
          {
            "expr": "sum(zen_flow_steps_total) by (phase)",
            "legendFormat": "{{phase}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 9,
        "title": "JobFlows by Namespace",
        "type": "graph",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 20},
        "targets": [
          {
            "expr": "sum(zen_flow_jobflows_total) by (namespace, phase)",
            "legendFormat": "{{namespace}} - {{phase}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "short",
            "label": "Count"
          },
          {
            "format": "short"
          }
        ]
      },
      {
        "id": 10,
        "title": "Top JobFlows by Step Count",
        "type": "bargauge",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 28},
        "targets": [
          {
            "expr": "topk(10, sum(zen_flow_steps_total) by (flow))",
            "legendFormat": "{{flow}}",
            "refId": "A"
          }
        ],
        "options": {
          "orientation": "horizontal"
        }
      },
      {
        "id": 11,
        "title": "Step Success Rate",
        "type": "bargauge",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 28},
        "targets": [
          {
            "expr": "sum(rate(zen_flow_steps_total{phase=\"Succeeded\"}[5m])) / sum(rate(zen_flow_steps_total[5m])) * 100",
            "legendFormat": "Success Rate",
            "refId": "A"
          }
        ],
        "options": {
          "orientation": "horizontal"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100
          }
        }
      }
    ]
  }
}

